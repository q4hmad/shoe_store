<h2>Brand:
  <%= @brand.brand %>, Price: $<%= @brand.price%></h2>

<div class="row">
  <div class="col-md-6">
    <h4>Select all stores to add them to a store:</h4>
    <form action="/brand_add_store/<%= @brand.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <% if @stores.any?() %>
        <% @stores.each() do |s| %>
          <div class="checkbox">
            <label>
              <input type="checkbox" name="store_ids[]" value="<%= s.id() %>"><%= s.name() %>
            </label>
          </div>
        <% end %>
      <% end %>
      <button type="submit">Add store</button>
    </form>

    <br>
    <h4>Update Brand</h4>
    <form action="/update_brand_name/<%= @brand.id() %>" method="post">
      <input name="_method" type="hidden" value="patch">
      <input id="brand" name="brand" type="text" placeholder="Update Brand Name">
      <input id="price" name="price" type="text" placeholder="Update Brand Price">
      <button type="submit">Update Price</button>
    </form>

    <br>
    <h4>Updated
      <%= @brand.brand %>
      information.</h4>
  </div>
  <div class="col-md-6">
    <h2>Brands</h2>
    <ul>
      <% if @brand.stores.any? %>
      <% @brand.stores.each do |s| %>
      <li>
        <a href="/brand_add_store/<%= s.id %>">
          <%= s.name %></a>
      </li>
      <% end %>
    <% else %>
      <p>There are currently no stores.</p>
      <% end %>
    </ul>
    <p>
      <a href="/">Return to Main Page</a>
    </p>
  </div>






</div>
