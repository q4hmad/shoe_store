
<div class="container">
  <h2>Shoe Distribution:</h2>
  <h3>Add a new store:</h3>
  <div class="form-control">
    <form action="/store_names" method="post">
      <label for="name">Add a store:</label>
      <input id="name" name="name" type="text">
      <button type="submit">Submit</button>
    </form>
  </div>

  <h3>Add a brand:</h3>
  <div class="form-control">
    <form action="/brand_names" method="post">
      <label for="brand">Brand Name:</label>
      <input id="brand" name="brand" type="text">
      <label for="price">Current Price:</label>
      <input id="price" name="price" type="text">
      <button type="submit">Submit</button>
    </form>
  </div>
  <div class="row">
    <br>
    <div class="col-md-6">
      <h3>All Stores</h3>
      <% @stores.each do |store| %>
      <h3><a href='/each_store/<%= store.id %>/'><%= store.name %></a></h3>
      <% end %>
    </div>
    <div class="col-md-6">
      <h3>All Brands and Prices</h3>
      <% @brands.each do |b| %>
      <h3><a href='/each_brand/<%= b.id %>/'><%= b.brand %> $ <%= b.price %></a></h3>
      <% end %>
    </div>
  </div>
</div>
