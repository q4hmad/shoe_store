
<div class="container">
  <h2>Welcome to the Shoe Distribution Center:</h2>
  <h3>A place where you can store information about stores and brands our center distributes to.</h3>
  <div class="form-control">
    <form action="/store_names" method="post">
      <label for="name">Add a store:</label>
      <input id="name" name="name" type="text">
      <button type="submit">Submit</button>
    </form>
  </div>

  <h3>Add a brand:</h3>
  <div class="form-control">
    <form action="/brand_names" method="post">
      <label for="brand">Brand Name:</label>
      <input id="brand" name="brand" type="text">
      <label for="price">Current Price:</label>
      <input id="price" name="price" type="text">
      <button type="submit">Submit</button>
    </form>
  </div>
  <div class="row">
    <br>
    <div class="col-md-6">
      <h3>Here are all the stores we work with:</h3>
    <% if @stores.any?() %>
   <ul>
      <% @stores.each do |store| %>
      <h3><li><a href='/each_store/<%= store.id %>/'><%= store.name %></a></li></h3>
    <% end %>
   </ul>
  <% else %>
     <p>There are no stores added yet.</p>
  <% end %>
    </div>
    <div class="col-md-6">
      <h3>All Brands and Prices</h3>
      <% if @brands.any?() %>
    <ul>
      <% @brands.each do |b| %>
      <h3><li><a href='/each_brand/<%= b.id %>/'><%= b.brand %> $ <%= b.price %></a></li></h3>
      <% end %>
    </ul>
  <% else %>
   <p>there are no brands added yet!</p>
   <% end %>
  </div>
 </div>
</div>
